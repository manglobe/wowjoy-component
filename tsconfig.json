{
  "compilerOptions": {
    "outDir": "es/",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@src": ["./src"],
      "@lib/*": ["./lib/*"],
      "@lib": ["./lib"],
      "@es/*": ["./es/*"],
      "@es": ["./es"],
      "@media/*": ["./src/media/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "build/lib",
    "es/**",
    "lib/**",
    "tests/**",
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "src/**/*.test.jsx",
    "src/**/*.test.tsx",
    "scripts/**"
  ]
}
